<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fav_backdrop"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_fav_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_fav_movie_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/gray"
                    android:contentDescription="@string/image_detail_movie"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fav_image"
                android:layout_width="107dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp"
                app:layout_constraintTop_toBottomOf="@id/cv_fav_backdrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_fav_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/gray"
                    android:contentDescription="@string/poster_movie"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_fav_movie_title"
                style="@style/Text.Header1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:ellipsize="end"
                android:lines="2"
                android:text="@string/ex_movie_title"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_fav_image"
                app:layout_constraintTop_toTopOf="@id/cv_fav_image"/>

            <TextView
                android:id="@+id/tv_genres"
                style="@style/Text.SubHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_movie_year"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_fav_movie_title"
                app:layout_constraintTop_toBottomOf="@id/tv_fav_movie_title"
                tools:text="Action • Adventure • Comedy • Scifi" />

            <TextView
                android:id="@+id/tv_movie_year"
                style="@style/Text.Header2"
                android:layout_margin="2dp"
                android:background="@drawable/bg_rating"
                android:paddingHorizontal="@dimen/dimen_8"
                android:paddingVertical="@dimen/dimen_1"
                android:lines="1"
                tools:text="2020"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_genres"
                app:layout_constraintTop_toBottomOf="@+id/tv_genres" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_rating"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dimen_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_genres"
                app:layout_constraintStart_toEndOf="@+id/tv_movie_year"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_baseline_star_24" />

                <TextView
                    android:id="@+id/tv_movie_rating"
                    style="@style/Text.Header2"
                    android:layout_marginEnd="8dp"
                    android:padding="1dp"
                    android:lines="1"
                    tools:text="7.8"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>