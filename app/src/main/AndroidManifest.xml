<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bagusmerta.moviee">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieeApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_moviee_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_moviee_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moviee">
        <activity
            android:name=".presentation.onboarding.OnboardingActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.all.AllMovieActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />
        <activity
            android:name=".presentation.search.SearchActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />
        <activity
            android:name=".presentation.detail.DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge"/>
    </application>

</manifest>