<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_loader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/slideshow_loader"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/poster_bg"
            android:scaleType="fitXY"
            android:layout_marginTop="26dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/title_movie_loader1"
            android:layout_width="116dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintStart_toStartOf="@+id/slideshow_loader"
            app:layout_constraintTop_toBottomOf="@id/slideshow_loader" />

        <View
            android:id="@+id/title_movie_loaderRight1"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintEnd_toEndOf="@+id/slideshow_loader"
            app:layout_constraintTop_toBottomOf="@id/slideshow_loader" />

        <LinearLayout
            android:id="@+id/first_loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_movie_loader1">

            <include
                layout="@layout/item_main_component_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1" />

            <include
                layout="@layout/item_main_component_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1" />

            <include
                layout="@layout/item_main_component_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:id="@+id/title_movie_loader2"
            android:layout_width="116dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintStart_toStartOf="@+id/first_loader"
            app:layout_constraintTop_toBottomOf="@id/first_loader"/>

        <View
            android:id="@+id/title_movie_loaderRight2"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintEnd_toEndOf="@+id/first_loader"
            app:layout_constraintTop_toBottomOf="@id/first_loader" />

        <LinearLayout
            android:id="@+id/second_loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_movie_loader2">

            <include
                layout="@layout/item_main_component_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1" />

            <include
                layout="@layout/item_main_component_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1" />

            <include
                layout="@layout/item_main_component_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>