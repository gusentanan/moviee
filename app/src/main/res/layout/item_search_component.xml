<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search_poster"
            android:layout_width="107dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            app:cardElevation="2dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_search_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/gray"
                android:contentDescription="@string/poster_movie" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_search_movie_title"
            style="@style/Text.Header1"
            android:layout_width="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_search_poster"
            app:layout_constraintTop_toTopOf="@id/cv_search_poster"/>

        <TextView
            android:id="@+id/tv_search_movie_overview"
            style="@style/Text.Header2"
            android:layout_width="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_search_poster"
            app:layout_constraintTop_toBottomOf="@id/tv_search_movie_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>