<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".presentation.main.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="@dimen/constraint_guide_top_percent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="@dimen/constraint_guide_left_percent"
                tools:ignore="DuplicateIncludedIds" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="@dimen/constraint_guide_right_percent"
                tools:ignore="DuplicateIncludedIds" />

            <FrameLayout
                android:id="@+id/fl_wrapper_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="516dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/banner_gradient_top" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/banner_gradient_bottom" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cv_btn_favorite"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/iv_search_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:contentDescription="@string/hint_search_movies"
                                android:src="@drawable/ic_baseline_search_24" />

                            <TextView
                                android:id="@+id/tv_search_hint"
                                style="@style/Text.Header2"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="16dp"
                                android:text="@string/hint_search_movies"
                                android:textColor="@color/gray"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_btn_favorite"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_search"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cv_search"
                        app:layout_constraintTop_toTopOf="@+id/cv_search">

                        <ImageView
                            android:id="@+id/btn_favorite"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="@string/favorite_menu"
                            android:src="@drawable/ic_baseline_bookmark_24" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_genre_banner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.SubHeader"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/bg_rating"
                        android:paddingHorizontal="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:layout_constraintBottom_toTopOf="@id/mb_more_info_banner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Action • Adventure • Comedy • Scifi"
                        android:visibility="gone"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_more_info_banner"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cornerRadius="24dp"
                        android:backgroundTint="@android:color/white"
                        android:text="More Info"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_more_info_banner"
                        app:iconTint="@color/black"
                        app:iconPadding="2dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvv_movies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_wrapper_banner"
                app:layout_constraintVertical_bias="1.0"
                tools:listitem="@layout/item_horizontal_movie_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/main_loading_shimmer"
        layout="@layout/activity_main_loader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        tools:visibility="visible" />

    <include
        android:id="@+id/error_state"
        layout="@layout/error_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>