<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/color_toast_view"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:layout_margin="24dp"
    android:background="@drawable/color_toast_bg"
    android:backgroundTint="#FF5A66">

    <ImageView
        android:id="@+id/color_toast_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/color_toast"
        android:src="@drawable/ic_error_toast"
        android:background="@drawable/color_toast_bg"
        android:padding="12dp" />

    <LinearLayout
        android:id="@+id/custom_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/color_toast_image"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/color_toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:letterSpacing="0.10"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/text_error"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/color_toast_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:text="@string/text_error_description"
            android:textAlignment="textStart"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>