<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fav_image"
                android:layout_width="154dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_fav_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/gray"
                    android:contentDescription="@string/poster_movie"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_fav_movie_title"
                style="@style/Text.Header1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_10"
                android:textSize="14sp"
                android:ellipsize="end"
                android:lines="2"
                android:text="@string/ex_movie_title"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_fav_image"
                app:layout_constraintTop_toTopOf="@id/cv_fav_image"
                app:layout_constraintBottom_toTopOf="@id/tv_genres"/>

            <TextView
                android:id="@+id/tv_genres"
                style="@style/Text.SubHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_20"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@id/tv_fav_movie_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ll_chip"
                app:layout_constraintStart_toStartOf="@id/tv_fav_movie_title"
                tools:text="Action • Adventure • Comedy • Scifi" />

            <LinearLayout
                android:id="@+id/ll_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/dimen_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_genres"
                app:layout_constraintTop_toBottomOf="@id/tv_genres">

                <TextView
                    android:id="@+id/tv_movie_year"
                    style="@style/Text.Header2"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="@dimen/dimen_8"
                    android:paddingVertical="@dimen/dimen_1"
                    android:layout_marginStart="0dp"
                    android:lines="1"
                    tools:text="2020"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_chip"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dimen_1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_14"
                        android:src="@drawable/ic_baseline_star_24" />

                    <TextView
                        android:id="@+id/tv_movie_rating"
                        style="@style/Text.Header2"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        tools:text="7.8"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>