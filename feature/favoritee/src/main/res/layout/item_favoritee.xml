<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fav_image"
                android:layout_width="@dimen/_134sdp"
                android:layout_height="@dimen/_94sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_fav_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/gray"
                    android:contentDescription="@string/poster_movie"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_fav_movie_title"
                style="@style/Text.Header1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:ellipsize="end"
                android:lines="2"
                android:text="@string/ex_movie_title"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_fav_image"
                app:layout_constraintTop_toTopOf="@id/cv_fav_image"
                app:layout_constraintBottom_toTopOf="@id/tv_genres"/>

            <TextView
                android:id="@+id/tv_genres"
                style="@style/Text.SubHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintTop_toBottomOf="@id/tv_fav_movie_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ll_chip"
                app:layout_constraintStart_toStartOf="@id/tv_fav_movie_title"
                tools:text="Action • Adventure • Comedy • Scifi" />

            <LinearLayout
                android:id="@+id/ll_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_genres"
                app:layout_constraintTop_toBottomOf="@id/tv_genres">

                <TextView
                    android:id="@+id/tv_movie_year"
                    style="@style/Text.Header2"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:layout_marginStart="0dp"
                    android:lines="1"
                    tools:text="2020"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:background="@drawable/bg_chip"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_1sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/ic_baseline_star_24" />

                    <TextView
                        android:id="@+id/tv_movie_rating"
                        style="@style/Text.Header2"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:lines="1"
                        tools:text="7.8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>