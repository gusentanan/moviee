<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="25dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search_poster"
            android:layout_width="154dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/gray"
                android:contentDescription="@string/poster_movie"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_search_movie_title"
            style="@style/Text.Header1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_14"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/ex_movie_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_genres"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/cv_search_poster"
            app:layout_constraintTop_toTopOf="@id/cv_search_poster" />

        <TextView
            android:id="@+id/tv_genres"
            style="@style/Text.SubHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/tv_search_movie_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_chip"
            app:layout_constraintStart_toStartOf="@id/tv_search_movie_title"
            tools:text="Action • Adventure • Comedy • Scifi" />

        <LinearLayout
            android:id="@+id/ll_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/dimen_10"
            app:layout_constraintTop_toBottomOf="@id/tv_genres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_genres">

            <TextView
                android:id="@+id/tv_movie_year"
                style="@style/Text.Header2"
                android:background="@drawable/bg_chip"
                android:paddingHorizontal="@dimen/dimen_8"
                android:paddingVertical="@dimen/dimen_1"
                android:lines="1"
                tools:text="2020"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dimen_1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_14"
                    android:src="@drawable/ic_baseline_star_24" />

                <TextView
                    android:id="@+id/tv_movie_rating"
                    style="@style/Text.Header2"
                    android:layout_marginEnd="8dp"
                    android:padding="1dp"
                    android:lines="1"
                    tools:text="7.8"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>