<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/no_data_search"
        app:layout_constraintTop_toBottomOf="@id/lottie_view"
        app:layout_constraintStart_toStartOf="@id/lottie_view"
        app:layout_constraintEnd_toEndOf="@id/lottie_view"/>

    <TextView
        android:id="@+id/tv_empty_desc"
        style="@style/Text.SubHeader"
        android:lines="2"
        android:textAlignment="center"
        android:textSize="@dimen/_14ssp"
        android:text="@string/no_data_search_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_state"
        app:layout_constraintStart_toStartOf="@id/tv_empty_state"
        app:layout_constraintEnd_toEndOf="@id/tv_empty_state"/>

</androidx.constraintlayout.widget.ConstraintLayout>